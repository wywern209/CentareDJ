@{
    ViewBag.Title = "Chat";
}
<h2>The Beat House</h2>
<div class="container">
    <div class="col-md-12">
        <div class="col-md-2">
            Current DJ: Batman
        </div>
        <div id="player" class="col-md-8"></div>
        <div class="col-md-2"></div>
    </div>
    <div class="col-md-12 chatbox-wrapper">
        <div id="discussion" class="chatbox"></div>
        <div class="input-group">
            <input type="text" class="form-control" id="message" />
            <span class="input-group-btn">
                <button class="btn btn-default" id="sendmessage">Send</button>
            </span>
        </div>
    </div>
</div>
@section scripts {
    <!--Script references. -->
    <!--The jQuery library is required and is referenced by default in _Layout.cshtml. -->
    <!--Reference the SignalR library. -->
    <script src="~/Scripts/jquery.signalR-2.2.0.min.js"></script>
    <!--Reference the autogenerated SignalR hub script. -->
    <script src="~/signalr/hubs"></script>
    <!--SignalR script to update the chat page and send messages.-->
    <script>
        var curUser = "@User.Identity.Name".split("@@")[0];
    </script>

    @Scripts.Render("~/bundles/chat")
    @Scripts.Render("~/bundles/youtube")
}